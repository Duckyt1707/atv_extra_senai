<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Calculadora de Média Escolar</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 50px;
    }
    input {
      margin: 5px;
      padding: 5px;
      width: 60px;
      text-align: center;
    }
    #resultado {
      margin-top: 20px;
      font-size: 20px;
      font-weight: bold;
      padding: 10px;
      border-radius: 8px;
      display: inline-block;
    }
  </style>
</head>
<body>
  <h1>Calculadora de Média Escolar</h1>
  <input type="number" id="nota1" placeholder="Nota 1">
  <input type="number" id="nota2" placeholder="Nota 2">
  <input type="number" id="nota3" placeholder="Nota 3">
  <br>
  <button onclick="calcular()">Calcular Média</button>
  <div id="resultado"></div>

  <script>
    function calcular() {
      let n1 = parseFloat(document.getElementById("nota1").value) || 0;
      let n2 = parseFloat(document.getElementById("nota2").value) || 0;
      let n3 = parseFloat(document.getElementById("nota3").value) || 0;

      let media = (n1 + n2 + n3) / 3;
      let res = document.getElementById("resultado");

      if (media >= 7) {
        res.textContent = `Média: ${media.toFixed(2)} → Aprovado`;
        res.style.background = "green";
        res.style.color = "white";
      } else if (media >= 5) {
        res.textContent = `Média: ${media.toFixed(2)} → Recuperação`;
        res.style.background = "orange";
        res.style.color = "white";
      } else {
        res.textContent = `Média: ${media.toFixed(2)} → Reprovado`;
        res.style.background = "red";
        res.style.color = "white";
      }
    }
  </script>
</body>
</html>
